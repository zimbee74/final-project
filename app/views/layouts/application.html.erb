<!DOCTYPE html>
<html>
  <head>
    <title>AngularWebpackerApp</title>
      <!-- <base href="/app"> -->
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= stylesheet_pack_tag    'application' %>
    <%= javascript_pack_tag    'application' %>
  </head>
  <body>
    <nav>
    <ul>
      <span class="site-enter">
        <% if @current_user.present? %>
         <li>
           Welcome, <%= @current_user.name %>
         </li>
          <li>
            <%= link_to 'Logout', login_path, method: 'delete', class: "nav-items" %>
          </li>
        <% else %>
          <li>
            <%= link_to 'Login', login_path, class: "nav-items" %>
          </li>
          <li>
            <%= link_to 'Sign up', new_user_path, class: "nav-items" %>
          </li>
        <% end %>

        <li>
          <%= link_to 'All Users', users_path, class: "nav-items" %>
        </li>
      </span>

      <span class="site-navigation">
        <li><a href="/app#/posts/new">New Post</a></li>
        <li><a href="/app#/posts/update">Edit Post</a></li>
        <li><a href="/app#/posts/">Posts</a></li>
        <li><a href="/app#/users">User Profile</a></li>
      </span>
    </ul>
    </nav>
    <%= yield %>
  </body>
</html>
